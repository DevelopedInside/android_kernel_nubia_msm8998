        txc@1e {
                compatible = "txc,pa224";
                reg = <0x1e>;
                interrupt-parent = <&tlmm>;
                interrupts = <62 0x2>;
                vdd-supply = <&pm8998_l19>;
                vio-supply = <&pm8998_s4>;
                txc,irq-gpio = <&tlmm 62 0x2002>;
                txc,ps_threshold_low = <30>;
