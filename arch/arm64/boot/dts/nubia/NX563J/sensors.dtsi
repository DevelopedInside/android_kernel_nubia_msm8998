
&tlmm {
        ir_remote_power_pin{
            pins = "gpio39";
            qcom,num-grp-pins = <1>;
            qcom,pin-func = <0>;
            label = "ir_remote_power_pin";
            ir_remote_power_active: active {
                drive-strength = <6>;
                bias-pull-up;
                output-high;
            };
            ir_remote_power_suspend: suspend {
                drive-strength = <6>;
                bias-pull-down;
                output-low;
            };
        };

        /* Nubia begin feature add uart ir dts */
        uart_ir_active: uart_ir_active {
                mux {
                        pins = "gpio49", "gpio50";
                        function = "blsp_uart9_a";
                };

                config {
                        pins = "gpio49", "gpio50";
                        drive-strength = <2>;
                        bias-disable;
                };
        };
        uart_ir_sleep: uart_ir_sleep {
                mux {
                        pins = "gpio49", "gpio50";
                        function = "gpio";
                };
                config {
                        pins = "gpio49", "gpio50";
                        drive-strength = <2>;
                        bias-pull-down;
                        output-low;
                };
        };
        /* Nubia end 2017.9.21 */

        /* Nubia begin feature sensor add */
        pa224_int {
            pa224_default: pa224_default{
                mux {
                    pins = "gpio62";
                    function = "gpio";
                };
                config {
                    pins = "gpio62";
                    drive-strength = <6>;
                    bias-pull-up;
                };
            };
            pa224_sleep: pa224_sleep{
                mux {
                    pins = "gpio62";
                    function = "gpio";
                };
                config {
                    pins = "gpio62";
                    drive-strength = <6>;
                    bias-high-impedance;
                };
            };
        };
        hall_int_0_pin{
            hall_int_0_default: hall_int_0_default {
             mux {
                    pins = "gpio123","gpio124";
                    function = "gpio";
                };
            config {
                pins="gpio123","gpio124";
                drive-strength = <6>;
                bias-pull-up;
                };
            };

            hall_int_0_sleep: hall_int_0_sleep {
             mux {
                    pins = "gpio123","gpio124";
                    function = "gpio";
                };
            config{
                pins= "gpio123","gpio124";
                drive-strength = <6>;
                bias-high-impedance;
                };
            };
        };
        /* Nubia end 2017.9.21 */
};

/* nubia nx563j begin feature add sensor dts */
